{
  "compilerOptions": {
    "checkJs": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "Node",
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "jsx": "preserve"
  },
  "include": [
    "src/**/*.js",
    "src/**/*.vue",
    "src/**/*.json",
    "server.js",
    "vite.config.js",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "vueCompilerOptions": {
    "globalTypesPath": "./src/volar.d.ts"
  }
}
